<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:useDefaultMargins="true"
    android:columnCount="6"
    android:orientation="horizontal"
    >

    <Button
        style="@style/Button.ColorInversed"
        android:layout_rowWeight="1"
        android:layout_columnWeight="0.5"
        android:layout_column="2"
        android:onClick="onClickBackspace"
        android:text="del"
        />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="0.5"
        android:onClick="onClickInputBr"
        android:text="( )" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBinOperator"
        android:text="^" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBinOperator"
        android:text="*" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBr"
        android:text="SIN( )" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBr"
        android:text="COS( )" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="7" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="8" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="9" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBinOperator"
        android:text="/" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBr"
        android:text="TAN( )" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="0.5"
        android:onClick="onClickInputBr"
        android:text="CTAN( )" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="4" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="5" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="6" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBinOperator"
        android:text="-" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBr"
        android:text="LN( )" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBr"
        android:text="LOG( )" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="1" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="2" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="3" />

    <Button
        style="@style/Button.Colored"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputBinOperator"
        android:text="+" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_column="2"
        android:onClick="onClickInputDigit"
        android:text="0" />

    <Button
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickInputDigit"
        android:text="." />

    <Button
        style="@style/Button.ColorInversed"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="onClickResult"
        android:text="=" />
</GridLayout>