<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DigitsTheme" parent="AppTheme">
        <item name="buttonStyle">@style/ButtonDigit</item>
    </style>

    <style name="OperatorsTheme" parent="AppTheme">
        <item name="buttonStyle">@style/ButtonOperator</item>
    </style>

    <style name="ButtonDigit" parent="Widget.AppCompat.Button">
        <item name="android:textSize"> @dimen/button_text_size </item>
    </style>

    <style name="ButtonOperator" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize"> @dimen/button_text_size </item>
    </style>


</resources>
